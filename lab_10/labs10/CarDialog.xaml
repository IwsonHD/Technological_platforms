<Window x:Class="labs10.CarDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add/Edit Car" Height="400" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Model:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtModel" Margin="0,0,0,10"/>
            <TextBlock Text="Year:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtYear" Margin="0,0,0,10"/>
            <TextBlock Text="Displacement:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtDisplacement" Margin="0,0,0,10"/>
            <TextBlock Text="HorsePower:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtHorsePower" Margin="0,0,0,10"/>
            <TextBlock Text="Engine Model:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtEngineModel" Margin="0,0,0,10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="OK" Width="75" Margin="5" Click="btnOK_Click"/>
                <Button Content="Cancel" Width="75" Margin="5" Click="btnCancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
